<MainUI>:
    orientation: 'vertical'
    spacing: 7
    padding: 9

    #Label showing a message or status
    Label:
        id: Title
        text: "VizAid"
        size_hint_y: 0.5
        color : [0.2196, 0.462, 0.714, 0.8]        
        font_size : 20
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        bold : True
        canvas:
            Color :
                rgba: 0.094, 0.659, 0.216, 0.3
            #Rectangle:
                #pos:self.pos
                #size : self.size
            RoundedRectangle:
                size: (self.size)
                pos: (self.pos)
                radius: [15, ]

    #Label showing a message or status
    Label:
        id: status_label
        text: "Welcome to VizAid"
        size_hint_y: 0.5
        color : [0.2196, 0.462, 0.714, 0.8]        
        font_size : 15
        text_size: self.size
        halign: 'right'
        valign: 'top'

    Label:
        id: result_label
        text: "Any text gathered for speech will be shown here. Once you press the button to read alound, this is the text that will be heard "
        size_hint_y: 0.8
        text_size: self.size
        halign: 'justify'
        valign: 'top'
        color: 0.2196, 0.462, 0.714, 0.8
        

    #Display for the captured image
    Image:
        id: image
        size_hint_y: 2.5
        source: "default_image3.png"
    
   

    
    #Main buttons 
    GridLayout:
        cols: 2
        spacing: 10
        padding: 10       


        #Button to open camera
        Button:
            id: open_camera_btn
            text: "Take Picture"
            #size_hint_y: 0.1
            outline_color: 1,0,0,1
            on_press: root.open_camera(self)

        Button:
            id: extract_text_btn
            text: "Extract Text"
            #size_hint_y: 0.1
            color: [0.094, 0.659, 0.216, 0.8]
            on_press: root.extract_text(self)

        Button:
            id: read_aloud_btn
            text: "Read Aloud"
            #size_hint_y: 0.1
            color: [0.094, 0.659, 0.216, 0.8]
            on_press: root.speak_text(self)
        
        Button:
            id: clr_btn
            canvas:
                Color :
                    rgba: 0,1,0,0.2
                RoundedRectangle:
                    size: (self.size)
                    pos: (self.pos)
                    radius: [15, ]
            text: "Clear"
            #size_hint_y: 0.1
            color: [1,0,0,1]
            on_press: root.clear_fields(self)
    
    # Camera widget (initially disabled)
    Camera:
        id: camera
        play: False
        resolution: (1280, 720)
        opacity: 0   # Hide the camera view initially    

<Label>:
    font_size: 14
    color: 1, 0, 0, 1 
    size_hint_y: 0.1



<Button>:
    font_size: 15
    #color: 0.294, 0.812, 0.612, 0.8
    size_hint_y: 0.1
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    background_color: 0.616, 0.651, 0.659, 0.8
    canvas:
        Color :
            rgba: 0.0196, 0.478, 0.960, 0.1
        RoundedRectangle:
            size: (self.size)
            pos: (self.pos)
            radius: [15, ]
   